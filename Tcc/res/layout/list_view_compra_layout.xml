<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    
    <TextView android:id="@+id/list_view_compra_data" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Segunda, 31/12/2014"
        style="@style/list_big_text"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />
    
    <TextView android:id="@+id/list_view_compra_quantidade" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingTop="4dp"
        android:textColor="@android:color/white"
        android:paddingBottom="4dp"
        android:text="31 produtos"
        style="@style/list_medium_text"
        />
    
    <TextView android:id="@+id/list_view_compra_label_supermercado" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Supermercado:"
        android:textColor="@android:color/white"
        android:layout_below="@id/list_view_compra_data"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        style="@style/list_tiny_text"/>
    
    <TextView android:id="@+id/list_view_compra_supermercado" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Shibata"
        android:textColor="@android:color/white"
        android:layout_below="@id/list_view_compra_label_supermercado"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        style="@style/list_big_text"/>

        <TextView
        android:id="@+id/list_view_compra_label_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_view_compra_quantidade"
        android:text="Valor:"
        style="@style/list_tiny_text" />
    
    <TextView
        android:id="@+id/list_view_compra_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_view_compra_label_valor"
        android:text="R$436,95"
        style="@style/list_big_text" />
    
</RelativeLayout>
