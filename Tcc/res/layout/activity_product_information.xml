<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back1small"
    android:orientation="vertical">

    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Produto: "
            android:textColor="@android:color/white"
            style="@style/label"/>
    	
   	<TextView android:id="@+id/activity_product_information_product_name" 
   	    android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="Sabão "
           android:textColor="@android:color/white"
           android:maxLines="3"
           style="@style/value"/>
   	
   	<TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Código de barras "
            android:textColor="@android:color/white"
            style="@style/label"/>
    	
   	<TextView android:id="@+id/activity_product_information_product_code" 
   	    android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="1231231231423 "
           android:textColor="@android:color/white"
           android:maxLines="3"
           style="@style/value"/>
   	
   	<TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Número de vezes já comprado: "
            style="@style/label"/>
    	
   	<TextView android:id="@+id/activity_product_information_product_count" 
   	    android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textColor="@android:color/white"
           android:text="Sabão "
           android:maxLines="3"
           style="@style/value"/>
   	
   	<TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Menor valor pago: "
            android:textColor="@android:color/white"
            style="@style/label"/>
    	
   	<TextView android:id="@+id/activity_product_information_product_min_price" 
   	    android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="Sabão "
           android:maxLines="3"
           android:textColor="@android:color/white"
           style="@style/value"/>
   	
	<TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Maior valor pago: "
        android:textColor="@android:color/white"
        style="@style/label"/>
    	
   	<TextView android:id="@+id/activity_product_information_product_max_price" 
   	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Sabão "
        android:maxLines="3"
        style="@style/value"/>
   	
	<TextView android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:textColor="@android:color/white"
	       android:text="Total gasto neste produto:  "
	       style="@style/label"/>
    	
   	<TextView android:id="@+id/activity_product_information_product_total_spent" 
   	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Sabão "
        android:maxLines="3"
        style="@style/value"/>

</LinearLayout>
